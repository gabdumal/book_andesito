{
  "CMakeLists.txt (main)": {
    "prefix": "cmake-main",
    "body": [
      "# Version",
      "cmake_minimum_required(VERSION 3.12...3.30)",
      "",
      "if (${CMAKE_VERSION} VERSION_LESS 3.12)",
      "\tcmake_policy(VERSION ${CMAKE_MAJOR_VERSION}.${CMAKE_MINOR_VERSION})",
      "endif ()",
      "",
      "# Project",
      "project(my_project",
      "\t\tLANGUAGES CXX",
      ")",
      "",
      "# Environment",
      "set(CMAKE_CXX_STANDARD 23)",
      "set(CMAKE_CXX_EXTENSIONS OFF)",
      "set(CMAKE_CXX_STANDARD_REQUIRED ON)",
      "",
      "# Compilation flags",
      "set(CMAKE_CXX_FLAGS \"${CMAKE_CXX_FLAGS} -Wall -Wextra -pedantic\")",
      "",
      "# Directories",
      "add_subdirectory(my_subdirectory)",
      "",
      "# Executable",
      "add_executable(my_project main.cpp)",
      "",
      "# Include module",
      "target_include_directories(my_project",
      "\tPUBLIC",
      "\t\t${CMAKE_CURRENT_LIST_DIR}",
      ")",
      "",
      "# Linking libraries",
      "target_link_libraries(my_project",
      "\tPRIVATE",
      "\t\tmy_dependencies",
      ")",
      ""
    ],
    "description": "CMakeLists.txt file to configure a project in CMake."
  },
  "CMakeLists.txt (library)": {
    "scope": "",
    "prefix": "cmake-library",
    "body": [
      "# Project",
      "add_library(my_library)",
      "",
      "# Sources",
      "target_sources(my_library",
      "\tPUBLIC",
      "\t\tmy_library.hpp",
      "\tPRIVATE",
      "\t\tmy_library.cpp",
      ")",
      "",
      "# Include module",
      "target_include_directories(my_library",
      "\tINTERFACE",
      "\t\t${CMAKE_CURRENT_LIST_DIR}",
      ")",
      "",
      "# Linking libraries",
      "target_link_libraries(my_library",
      "\tPRIVATE",
      "\t\tmy_dependencies",
      ")",
      ""
    ],
    "description": "CMakeLists.txt file to configure a static library in CMake."
  }
}
