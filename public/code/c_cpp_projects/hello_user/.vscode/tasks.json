{
  "version": "2.0.0",
  "tasks": [
    {
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${workspaceFolder}/*.cpp",
        "-I",
        "${workspaceFolder}",
        "-o",
        "${workspaceFolder}/build/${workspaceFolderBasename}"
      ],
      "command": "clang++",
      "detail": "Tarefa de compilação de um projeto em C++. Compila todos os arquivos C++ na raiz do projeto em um único executável.",
      "group": {
        "kind": "build"
      },
      "label": "Clang: build C++ project (Local)",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "type": "cppbuild"
    }
  ]
}
